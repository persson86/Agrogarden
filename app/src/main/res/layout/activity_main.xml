<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.mob.schneiderpersson.agrohorta.MainActivity">

        <EditText
            android:text="alface"
            android:id="@+id/etPlanta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Planta 1" />

        <EditText
            android:text="beterraba"
            android:id="@+id/etPlanta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:hint="Planta 2" />

        <Button
            android:id="@+id/btAddRelCompanheiras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:onClick="btAddRelCompanheiras_onCLick"
            android:text="Cadastrar Rel. Companheiras" />

        <Button
            android:id="@+id/btAddRelAntagonicas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:onClick="btAddRelAntagonicas_onCLick"
            android:text="Cadastrar Rel. Antagonicas" />

        <ProgressBar
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:id="@+id/progressBar"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btGetData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:onClick="btGetData_onCLick"
            android:text="SIMULAR" />

        <TextView
            android:text="Lista Plantas Companheiras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <ListView
            android:id="@+id/lvList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="invisible"></ListView>

    </LinearLayout>
</ScrollView>
